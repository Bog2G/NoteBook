<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container" style="margin: 2% 15% 10% 6%;">
  <div>
    <%= form.label :note_title, style: "display: block" %>
    <%= form.text_field :note_title, :maxlength => 15, :style=>"border-top-width: 0;border-bottom-width: 2;border-right-width:
    0;border-left-width: 0; outline-width: 0; width: 90%;" %>
  </div>

  <div>
    <%= form.label :note_content, style: "display: block" %>
    <%= form.text_area :note_content, :style=>"border-top-width: 0;border-bottom-width: 2;border-right-width: 2;
    border-left-width: 2; outline-width: 0; resize: none; width: 90%; height: 650px" %>
  </div>
  <div class="field form-group">
    <%= form.number_field :user_id, id: :note_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>

  <br/>
  <div>
    <%= form.submit :style=> "margin-left: 40%" %>
  </div>
<% end %>
</div>



